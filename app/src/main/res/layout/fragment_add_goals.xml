<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddGoalsFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="16dp"
        android:background="@color/background_card"
        android:elevation="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/goalNametextInputLayout"
                style="@style/boxedEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/goal_name"
                app:layout_constraintBottom_toTopOf="@+id/goalDescriptionTextInputLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:minLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/goalDescriptionTextInputLayout"
                style="@style/boxedEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:hint="@string/goal_description"
                app:layout_constraintBottom_toTopOf="@+id/goalDueDateButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/goalNametextInputLayout">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:imeOptions="actionNext"
                    android:maxLines="4"
                    android:minLines="3" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/goalDueDateButton"
                style="@style/boxedEditText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/boxed_button"
                android:gravity="start|center"
                android:padding="5dp"
                android:text="@string/due_date"
                android:textColor="@color/medium_gray"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/goalDescriptionTextInputLayout">

            </Button>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/addGoalButton"
        style="@style/signInButton"
        android:layout_gravity="bottom|center"
        android:layout_margin="16dp"
        android:text="@string/add_goal" />

    <ProgressBar
        android:id="@+id/add_goal_progress"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:elevation="5dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="bottom|center"
        android:indeterminate="true"
        android:visibility="gone" />


</android.support.design.widget.CoordinatorLayout>

