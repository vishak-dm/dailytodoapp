<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/background_light</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextAppearance.FontPath</item>
        <item name="android:windowBackground">@color/background_light</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="boxedEditText" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintTextAppearance">@style/boxedEditTextHintTextAppearance</item>
        <item name="helperTextTextAppearance">@style/boxedEditTextHintTextAppearance</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.FontPath" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Avenir-Book.ttf</item>
    </style>

    <style name="boxedEditTextHintTextAppearance" parent="TextAppearance.FontPath">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="signInButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/oval_button_background</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/signInButtonTextApperance</item>

        <item name="cornerRadius">5dp</item>
    </style>

    <style name="signInButtonTextApperance" parent="TextAppearance.FontPath">
        <item name="fontPath">fonts/Avenir-Medium.ttf</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="logoTextApperance" parent="android:TextAppearance">
        <item name="fontPath">fonts/Avenir-Black.ttf</item>
        <item name="android:color">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="fontBookAppearance" parent="android:TextAppearance">
        <item name="fontPath">fonts/Avenir-Book.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">fonts/Avenir-Book.ttf</item>
    </style>

    <style name="fontHeavyAppearance" parent="android:TextAppearance">
        <item name="fontPath">fonts/Avenir-Heavy.ttf</item>
    </style>

    <style name="headingTextApperance" parent="android:TextAppearance">
        <item name="fontPath">fonts/Avenir-Medium.ttf</item>
        <item name="android:color">@color/dark_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">fonts/Avenir-Medium.ttf</item>

    </style>

    <style name="blockHeadingTextAppearance" parent="android:TextAppearance">
        <item name="fontPath">fonts/Avenir-Black.ttf</item>
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="smallHeadingTextApperance" parent="android:TextAppearance">
        <item name="fontPath">fonts/Avenir-Book.ttf</item>
        <item name="android:color">@color/medium_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">fonts/Avenir-Book.ttf</item>

    </style>

    <style name="bottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@drawable/bottom_navigation_colors</item>
        <item name="itemTextColor">@drawable/bottom_navigation_colors</item>
        <item name="itemTextAppearanceActive">@style/fontBookAppearance</item>
        <item name="itemTextAppearanceInactive">@style/fontBookAppearance</item>
    </style>


    <style name="TextAppearance.TilePrimary" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:letterSpacing">0.01</item>
        <item name="fontPath">fonts/Avenir-Book.ttf</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.TileSecondary" parent="@android:style/TextAppearance.Material.Body2">
        <item name="android:letterSpacing">0.01</item>
        <item name="fontPath">fonts/Avenir-Light.ttf</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="addFloatinActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:src">@drawable/ic_add</item>
    </style>

    <style name="addButtonApperance" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/add_button_drawable</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="flatButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/flat_button_drawable</item>
        <item name="android:textAppearance">@style/fontBookAppearance</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="IconflatButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:icon">@drawable/ic_add</item>
        <item name="android:background">@drawable/flat_button_drawable</item>
        <item name="android:textAppearance">@style/fontBookAppearance</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/drab</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>


    <style name="BoxedTextView" >
        <item name="fontPath">fonts/Avenir-Medium.ttf</item>
        <item name="android:background">@drawable/boxed_text_background</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
